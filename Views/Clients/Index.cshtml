@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Client>;

<h1>Clients</h1>

@if (@Model.Count == 0)
{
  <h3>Sorry, Not here! </h3>
} 

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId })</li>
}
<hr>
@using (Html.BeginForm())
{
  @Html.Label("Search clients by name")
  @Html.TextBox("Search")
  <input type="submit" value="search" class="btn btn-dark btn-sm"/>
}



<Button>@Html.ActionLink("Add new client", "Create")</button>