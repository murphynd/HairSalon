@{
  Layout = "_Layout";
}

@using Salon.Models;
@model List<Salon.Models.Stylist>;

<h1>Stylists</h1>

@if (@Model.Count == 0)
{
  <h3>No categories have been added yet!</h3>
} 

@foreach (Stylist stylist in Model)
{
  <li>@Html.ActionLink($"{stylist.Name}", "Details", new { id = stylist.StylistId })</li>
}
<br>

<Button>@Html.ActionLink("Add new stylist", "Create")</Button>